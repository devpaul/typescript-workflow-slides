@import special

.slides > section {
	&.full {
		height: 100%
		width: 100%
	}

	.background-image-container {
		top: 0;
		left: 0;
		position: absolute;
		opacity: 0.5;

		img {
			border: none;
			margin: 0;
		}
	}


	img {
		&.strip {
			background: none;
			border: none;
			box-shadow: none;
		}

		&.full {
			max-width: 100%;
			max-height: 100%;
		}

		&.medium {
			min-height: 20vh;
		}

		&.gh-mark {
			height: 49px;
			margin: 0 10px 0 0;
		}
	}

	.mosaic {
		display: flex;
		max-width: 100%;
		flex-wrap: wrap;
		justify-content: center;

		> * {
			margin: 10px;
		}
	}
}
